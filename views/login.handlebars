{{!--

login form handlebar template

--}}
{{#if error}}
    <p id="error" class="error">{{error}}</p>
{{/if}}
<form id="login-form" action="/login" method="post">
    <label for="emailAddressInput">Email Address:</label>
    <input type="email" id="emailAddressInput" name="emailAddressInput" required>

    <label for="passwordInput">Password:</label>
    <input type="password" id="passwordInput" name="passwordInput" required>

    <input type="submit" value="Login">
</form>

<p>Don't have an account? <a href="/register">Click here to register!</a></p>

